@model WebMusicaGrupoC.Models.ConciertosGrupos

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Añadir a los Grupos los Conciertos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GruposId" class="control-label"></label>
                <select asp-for="GruposId" class ="form-control" asp-items="ViewBag.GruposId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ConciertosId" class="control-label"></label>
                <select asp-for="ConciertosId" class ="form-control" asp-items="ViewBag.ConciertosId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
